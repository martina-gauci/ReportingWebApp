@model NEMESYS.Models.User
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-sm-12">

        <h2>Your Profile</h2>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd>
                @if (Model.Phone != null) {
                    @Html.DisplayFor(model => model.Phone)
                }
                else {
                    <span>Not Specified</span>
                }

            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Role)
            </dt>
            <dd>
                @if (Model.Role == roles.Reporter) {
                    <span>Reporter</span>
                }
                else if (Model.Role == roles.Investigator) {
                    <span>Investigator</span>
                }
                else {
                    <span>Admin</span>
                }

            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NoOfReportsSubmitted)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NoOfReportsSubmitted)
            </dd>
        </dl>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <dl class="dl-horizontal">
            <dt>
                <a class="styled-link" id="editInfoBtn" asp-controller="Account" asp-action="EditUserPhone">Edit Phone Number</a>
            </dt>
        </dl>
    </div>
</div>


